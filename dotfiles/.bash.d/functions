pathmunge () {
        if ! echo $PATH | egrep -q "(^|:)$1($|:)" ; then
           if [ "$2" = "after" ] ; then
              PATH=$PATH:$1
           else
              PATH=$1:$PATH
           fi
        fi
}

new_startx()
{
  /usr/bin/startx &
}

tc_mount()
{
  truecrypt --mount ~/Dropbox/crypt.tc ~/crypt
}

tc_unmount()
{
  truecrypt -d ~/crypt
}

tint_restart()
{
    pkill tint2 && tint2 &
    disown
}

merge_pacnew()
{
  PACNEWS=$(find /etc -name *.pacnew)
  for i in $PACNEWS; do
    old=`echo $i | sed 's/\(.*\)\.pacnew/\1/'`
    vimdiff $old $i
  done
}

remove_pacnew()
{
  PACNEWS=$(find /etc -name *.pacnew)
  for i in $PACNEWS; do
    rm $i
  done
}

setup_chroot()
{
  local binds
  binds="/dev /sys /sys/fs/cgroup"
  for i in $binds
  do
    sudo mount --bind $i /mnt$i
  done

  sudo mount -t proc none /mnt/proc
}

enter_chroot()
{
  setup_chroot

  sudo chroot /mnt
}

teardown_chroot()
{
  local binds
  binds="/dev /sys/fs/cgroup /sys /proc"
  for i in $binds
  do
    sudo umount /home/chroot$i
  done
}


hibernate()
{
  sudo -b systemctl hibernate && slock
}
